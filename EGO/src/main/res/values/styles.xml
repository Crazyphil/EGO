<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.RedCrossLight">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppBaseTheme.Dark" parent="Theme.RedCrossDark" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="contactsMenuIcon">@drawable/social_group_light</item>
        <item name="navigationMenuIcon">@drawable/location_directions_light</item>
        <item name="lightMenuIcon">@drawable/ic_action_bightness_low</item>
        <item name="lightMenuText">@string/main_activity_action_light_off</item>
        <item name="clearIcon">@drawable/clear_light</item>
        <item name="clearIconInverse">@drawable/clear_dark</item>
        <item name="primaryTextColor">@android:color/primary_text_light</item>
        <item name="secondaryTextColor">@android:color/secondary_text_light</item>
        <item name="tilesLoadingBackgroundColor">#d8d0d0</item>
        <item name="tilesLoadingLineColor">#c8c0c0</item>
        <item name="routeColor">#800000ff</item>
        <item name="turnTint">@android:color/secondary_text_light</item>
    </style>
    <style name="AppTheme.Dark" parent="AppBaseTheme.Dark">
        <item name="contactsMenuIcon">@drawable/social_group_dark</item>
        <item name="navigationMenuIcon">@drawable/location_directions_dark</item>
        <item name="lightMenuIcon">@drawable/ic_action_brightness_high</item>
        <item name="lightMenuText">@string/main_activity_action_light_on</item>
        <item name="clearIcon">@drawable/clear_dark</item>
        <item name="clearIconInverse">@drawable/clear_light</item>
        <item name="primaryTextColor">@android:color/primary_text_dark</item>
        <item name="secondaryTextColor">@android:color/secondary_text_dark</item>
        <item name="tilesLoadingBackgroundColor">#272f2f</item>
        <item name="tilesLoadingLineColor">#373f3f</item>
        <item name="routeColor">#80ffff00</item>
        <item name="turnTint">@android:color/secondary_text_dark</item>
    </style>

</resources>
